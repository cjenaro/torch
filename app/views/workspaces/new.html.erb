<h1 class="text-2xl font-bold mb-4">New Workspace</h1>

<%= form_with model: @workspace, url: workspaces_path, class: "space-y-4" do |f| %>
  <div>
    <%= f.label :name, class: "block text-sm font-medium leading-6 text-base" %>
    <div class="mt-2 relative">
      <%= f.text_field :name,
                   class:
                     "#{@workspace.errors[:name].any? ? "ring-red-300 placeholder:text-red-300 focus:ring-red-500" : "ring-black/5 dark:ring-white/10  placeholder:text-muted focus:ring-highlight-600"} 
      block w-full rounded-md border-0 bg-white/5 py-1.5 shadow-sm ring-1 ring-inset focus:ring-2 focus:ring-inset  sm:text-sm sm:leading-6
            " %>

      <% if @workspace.errors[:name].any? %>
        <div
          class="
            pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3
          "
        >
          <svg
            class="h-5 w-5 text-red-500"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-5a.75.75 0 01.75.75v4.5a.75.75 0 01-1.5 0v-4.5A.75.75 0 0110 5zm0 10a1 1 0 100-2 1 1 0 000 2z"
              clip-rule="evenodd"
            />
          </svg>
        </div>
      <% end %>
    </div>
    <% @workspace.errors[:name].each do |message| %>
      <p class="mt-2 text-sm text-red-600"><%= message %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium leading-6 text-base" %>
    <div class="mt-2">
      <%= f.text_area :description,
                  class:
                    "#{@workspace.errors[:description].any? ? "ring-red-300 placeholder:text-red-300 focus:ring-red-500" : "ring-black/5 dark:ring-white/10  placeholder:text-muted focus:ring-highlight-600"} 
      block w-full rounded-md border-0 bg-white/5 py-1.5 shadow-sm ring-1 ring-inset focus:ring-2 focus:ring-inset  sm:text-sm sm:leading-6
            " %>
    </div>
  </div>

  <div>
    <%= f.submit "New Workspace",
             class:
               "rounded-md bg-highlight-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-highlight-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-highlight-600" %>
  </div>
<% end %>
