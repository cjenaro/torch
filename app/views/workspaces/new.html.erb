<h1 class="text-2xl font-bold mb-4">New Workspace</h1>

<%= form_with model: @workspace, url: workspaces_path, class: "space-y-4" do |f| %>
  <div>
    <%= f.label :name, class: "block text-gray-700" %>
    <%= f.text_field :name, class: "w-full px-4 py-2 border rounded" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-gray-700" %>
    <%= f.text_field :description, class: "w-full px-4 py-2 border rounded" %>
  </div>

  <div>
    <%= f.submit "New Workspace", class: "px-4 py-2 bg-blue-600 text-white rounded" %>
  </div>
<% end %>
