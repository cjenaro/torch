<h1 class="text-2xl font-bold mb-4">Sign Up</h1>

<% if @user.errors.any? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, url: users_path, class: "space-y-4" do |f| %>
  <div>
    <%= f.label :name, class: "block text-gray-700" %>
    <%= f.text_field :name, class: "w-full px-4 py-2 border rounded" %>
  </div>

  <div>
    <%= f.label :email, class: "block text-gray-700" %>
    <%= f.email_field :email, class: "w-full px-4 py-2 border rounded" %>
  </div>

  <div>
    <%= f.label :password, class: "block text-gray-700" %>
    <%= f.password_field :password, class: "w-full px-4 py-2 border rounded" %>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "block text-gray-700" %>
    <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border rounded" %>
  </div>

  <div>
    <%= f.submit "Create Account", class: "px-4 py-2 bg-blue-600 text-white rounded" %>
  </div>
<% end %>
