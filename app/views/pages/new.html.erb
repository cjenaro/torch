<h1 class="text-2xl font-bold mb-4">New Page</h1>

<%= form_with model: [@workspace, @page], class: "space-y-4" do |f| %>
  <div>
    <%= f.label :title, class: "block text-gray-700" %>
    <%= f.text_field :title, required: true, class: "w-full px-4 py-2 border rounded" %>
  </div>

  <%= f.hidden_field :parent_id %>

  <div>
    <%= f.label :template_id, "Choose a Template", class: "block text-gray-700" %>
    <%= select_tag :template_id, options_from_collection_for_select(@templates, :id, :title), include_blank: "Blank", class: "w-full px-4 py-2 border rounded" %>
  </div>

  <div>
    <%= f.submit "Create Page", class: "px-4 py-2 bg-blue-600 text-white rounded" %>
  </div>
<% end %>
