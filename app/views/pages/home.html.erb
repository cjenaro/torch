<div class="min-h-screen bg-gray-100 flex flex-col items-center justify-center space-y-4" data-controller="greetings">
  <h1 class="text-4xl font-bold text-blue-600">
    Welcome to Torch!
  </h1>
  <div>
    <input data-greetings-target="name" type="text" placeholder="Enter your name" class="px-4 py-2 border rounded" />
    <button data-action="click->greetings#greet" class="ml-2 px-4 py-2 bg-blue-600 text-white rounded">
      Greet
    </button>
  </div>
  <p data-greetings-target="output" class="text-xl text-gray-800"></p>
</div>
