<h1 class="text-2xl font-bold mb-4">Reset Password</h1>

<%= form_with model: @user, url: password_reset_path(params[:id]), local: true, class: "space-y-4" do |f| %>
  <%= hidden_field_tag :email, @user.email %>

  <div>
    <%= f.label :password, class: "block text-gray-700" %>
    <%= f.password_field :password, class: "w-full px-4 py-2 border rounded" %>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "block text-gray-700" %>
    <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border rounded" %>
  </div>

  <div>
    <%= f.submit "Update Password", class: "px-4 py-2 bg-blue-600 text-white rounded" %>
  </div>
<% end %>
