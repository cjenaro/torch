<h1 class="text-2xl font-bold mb-4">Forgot Password</h1>

<%= form_with url: password_resets_path, class: "space-y-4" do |f| %>
  <div>
    <%= f.label :email, class: "block text-gray-700" %>
    <%= f.email_field :email, class: "w-full px-4 py-2 border rounded" %>
  </div>

  <div>
    <%= f.submit "Send Reset Instructions", class: "px-4 py-2 bg-blue-600 text-white rounded" %>
  </div>
<% end %>
